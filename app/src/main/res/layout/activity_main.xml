<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout4" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="22dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" tools:layout_editor_absoluteX="-27dp" tools:layout_editor_absoluteY="40dp">
            <Button
                    android:text="@string/master"
                    android:layout_height="46dp"
                    android:layout_width="87dp"
                    android:id="@+id/masterButton"
                    android:background="@color/colorAccent"
                    style="@style/Widget.AppCompat.Button.Borderless"/>
            <Button
                    android:text="@string/eng_306"
                    android:layout_width="87dp"
                    android:layout_height="46dp"
                    android:id="@+id/engButton"
                    android:background="@color/planmoGreen"
                    style="@style/Widget.AppCompat.Button.Borderless"/>
            <Button
                    android:text="@string/i_m_355"
                    android:layout_width="87dp"
                    android:layout_height="46dp"
                    android:id="@+id/oneButton"
                    android:background="@color/planmoYellow"
                    style="@style/Widget.AppCompat.Button.Borderless"/>
            <Button
                    android:text="@string/i_m_361"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:id="@+id/twoButton"
                    android:background="@color/planmoRed"
                    style="@style/Widget.AppCompat.Button.Borderless"/>
        </LinearLayout>

        <ImageView
                android:layout_width="395dp"
                android:layout_height="153dp" app:srcCompat="@drawable/redtask"
                tools:layout_editor_absoluteY="161dp" tools:layout_editor_absoluteX="0dp" android:id="@+id/imageView9"
                android:scaleType="fitCenter" android:contentDescription="@string/todo"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <Button
                    android:layout_height="wrap_content"
                    android:id="@+id/taskButton"
                    android:background="@color/planmoRed"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.267"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_weight="1" android:layout_width="0dp" android:layout_marginTop="70dp"
                    android:text="@string/add_task" android:layout_marginEnd="70dp"
                    style="@style/Widget.AppCompat.Button.Borderless"/>
            <ImageView
                    android:layout_width="146dp"
                    android:layout_height="150dp"
                    android:id="@+id/reminjiView"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.967"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.936" app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/reminjis_bunnlesred" android:contentDescription="@string/reminji"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
